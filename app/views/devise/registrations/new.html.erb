<% @title="Sign Up" %>
<body class="welcome">
  <div class="container main-container">
    <div class="row">
      <div class="six columns">
        <div id="landing-summary">
          <div class="landing-header">Helping you, help plants.</div>
          <p>You donâ€™t have to be blessed with a green thumb to keep houseplants alive and thriving. Let Plantia keep track of your houseplants and their watering schedules.</p>
        </div>
      </div>
      <div class="five columns">
        <div id="signup-usermsg">
          <h2>Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "u-full-width" %>

            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "u-full-width" %>

            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "u-full-width" %>

            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "u-full-width" %>

            <%= f.submit "Sign up", class: "button" %>
          <% end %>

          <%- if controller_name != 'sessions' && controller_name != 'passwords' %>
            <%= link_to "Already have an account?", new_session_path(resource_name) %><br />
          <% end -%>
        </div>
      </div>
    </div>
  </div>
</body>
