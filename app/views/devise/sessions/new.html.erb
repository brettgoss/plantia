<% @title="Log In" %>
<body class="welcome">
  <div class="container main-container">
    <div class="row">

      <div class="six columns">
        <div id="landing-summary">
          <div class="landing-header">Helping you, help plants.</div>
          <p>You donâ€™t have to be blessed with a green thumb to keep houseplants alive and thriving. Let Plantia keep track of your houseplants and their watering schedules.</p>
        </div>
      </div>

      <div class="five columns">
        <% if !current_user %>
          <div id="signup-usermsg">
            <h2>Log In</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <%= f.label :email %>
              <%= f.email_field :email, autocomplete: "email", class: "u-full-width" %>

              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "current-password", class: "u-full-width" %>

              <%= f.submit "Log in", class: 'button' %>

              <% if devise_mapping.rememberable? -%>
                <span class="remember-me">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </span>
              <% end -%>
            <% end %>

            <hr />

            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>

            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Create an account", unauthenticated_root_path() %><br />
            <% end -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>