<body class="plant_form_body">
<div class="container" id="plant_form_page">
  <%= form_for :plant, url: plant_path(@plant), method: :patch do |f| %>

    <% if @plant.errors.any? %>
      <div id="error_explanation">
        <h6>
          <%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:
        </h6>
        <ul>
          <% @plant.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div id="plant_form">
      <div class="row">
        <div class="five columns">
          <%= f.label 'Plant Name' %>
          <%= f.text_field :nickname, class: 'form-control' %>
        </div>

        <div class="five columns">
          <%= f.label 'Plant Type' %>
          <%= f.text_field :common_name, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="five columns">
          <%= f.label 'Light Needs' %>
          <%= f.select :light, ['Direct Sunlight','Indirect Sunlight', 'Shady', 'Darkness'], class: 'u-full-width' %>
        </div>
        <div class="five columns" id="water_freq">
          <%= f.label 'Water Needs' %>
          Water every <%= f.number_field :water_freq, class: 'form-control', placeholder: "?"  %> days
        </div>
      </div>
      <div class="row">
        <div class="six columns">
          <%= link_to "Back", @plant, class: 'button' %>
        </div>
        <div class="six columns">
          <%= f.submit 'Save Edits', class: 'button' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</body>
