<% @title="My Plants" %>
<div class="plants container">

  <h1>My Plants</h1>
  <div class="row" id="action-buttons">
    <div class="six columns">
      <%= link_to '+ New Plant', new_plant_path, class: 'button' %>
    </div>
  </div>

  <div class="panel panel-default plants">

    <table class="u-full-width">
        <tr>
          <th>Plant</th>
          <th>Light Needs</th>
          <th>Water Needs</th>
          <th>Remove</th>
        </tr>
      <tbody>
        <%= render @plants %>
      </tbody>
    </table>

  </div>

</div>
