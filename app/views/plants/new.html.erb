<% @title="New Plant" %>
<body class="plant_form_body">
  <div class="container" id="plant_form_page">
    <%= form_for @plant, url: plants_path do |f| %>

      <% if f.object.errors.any? %>
        <div>
          The following errors prevented saving:
          <ul>
            <% f.object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div id="plant_form">
        <div class="row">
          <div class="six columns">
           <h1>Create Plant</h1>
          </div>
        </div>

        <div class="row">
          <div class="five columns">
            <%= f.label 'Plant Nickname' %>
            <%= f.text_field :nickname, class: 'form-control' %>
          </div>
          <div class="five columns">
            <%= f.label 'Plant Type' %>
            <%= f.text_field :common_name, class: 'form-control' %>
          </div>
        </div>
        <div class="row">
          <div class="five columns">
            <%= f.label 'Light Needs' %>
            <%= f.select :light, ['Direct Sunlight','Indirect Sunlight', 'Shady', 'Darkness'], class: 'form-control' %>
          </div>
          <div class="five columns" id="water_freq">
            <%= f.label 'Water Needs' %>
            Water every<%= f.number_field :water_freq, class: 'form-control', placeholder: "?"  %> days
          </div>
        </div>
        <div class="row">
          <div class="five columns">
           <%= link_to 'Back', :back, class: 'button' %>
          </div>
          <div class="five columns">
          <%= f.submit 'Create Plant', class:'button' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</body>
